dict = {"school" : "Is is the place where one can study",
 "charger" : "It is combinition of wire and switch from one cahrge ts belongings",
 "chair" : " it is the part of furniture on which you can sit easily",
 "mobile" : "a device which can be moved use for communication purpose" }

print("My Dictionary has these words")
print(dict.keys())
print("If you want to check the meaning of any word then kindly enter it first")
for x in range (0,4):
    word = input()
    print("The meaning of this word is : ", dict[word])
    if x == 3:
     print(end = "")
    else :
        print("If you wanna check again any other word then you can enter that word")

